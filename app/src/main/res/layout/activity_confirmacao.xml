<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#8bc34a">

    <ImageView
        android:id="@+id/iconcheck"
        android:src="@drawable/ic_done_white_36px"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tituloConfirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/confirmacao_title"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:layout_below="@id/iconcheck"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloConfirmacao"
        android:text="@string/confirmacao_subtitulo"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:padding="25sp"/>

</RelativeLayout>
